<div class="ride_testimonial">
<!-- recent rides start-->
  <div class="recent-rides">
    <p class="heading">Recent Rides</p>
    <div id="buttons"><%= link_to image_tag("up_arrow.png",:id => "prev1") %> </div>
      <div id="carousel1">
        <div id="slides1">
          <ul>
             <% if !@carpools.empty? %>
             <% @carpools.each do |c| %>
             <li class="slide1" >
             <div id="left">
                <%= image_tag c.user.picture.url(:medium), :style=>"border-radius:50%;height:85px" %>
              </div>
              <div id="right">
                <span id="info1"><h2><%= c.source.first.source %></h2></span>
                <i id="info1" style="font-size: 4em;margin-top: -0.2em;" class="fa fa-long-arrow-right" ></i>

                <span id="info1" ><h2><%= c.destination.first.destination %></h2></span>
                <span id="info1" ><h2>  <%= c.price %> </h2></span>
                 <span style="float: left;padding-left: 4em;"><h2> <%= c.journey_date %> </h2></span>
              </div>




             </li>
             <% end %>
             <% end %>
          </ul>
        </div>
      </div>
      <div id="buttons"><%= link_to image_tag("down_arrow.png",:id => "next1") %> </div>
    </div>
<!-- testimonial start-->
   <div class="testimonial">
   <p class="heading">Testimonials</p>
    <div id="buttons"><%= link_to image_tag("up_arrow.png",:id => "prev2") %> </div>
        <div id="carousel2">
        <div id="slides">
            <ul>
            <% if !@testimonials.empty? %>
            <% @testimonials.each do |t| %>
            <li class="slide">

               <%= image_tag t.user.picture.url(:medium), :style=>"height: 100px;width: 100px;border-radius:50%"%>
               <h1 id="name"><%= t.user.username %></h1>
               <p><%= t.message %></p>
            </li>
             <% end %>
             <% end %>
            </ul>
        </div>
        </div>
        <div id="buttons"><%= link_to image_tag("down_arrow.png",:id => "next2") %> </div>
    </div>
</div>
