<!-- search form -->
<div class="find-rides-main">
  <div class="find-rides">
      <%= form_tag(:action => 'find') do %>

        <span id="source-span" class="float_label">
        <%= text_field_tag (:source), nil, :required => true,:placeholder => ""%>
        <label>Enter source</label>
        </span>

        <span id="destination-span" class="float_label">
        <%= text_field_tag (:destination), nil, :required => true ,:placeholder => ""%>
        <label>Enter destination</label>
        </span>


       <%= submit_tag "Search", :class=> "btn btn-blue", :id=> "search-button" %>
      <% end %>
  </div>
   <div id="map-canvas2"></div>
</div>
<!--/search form -->

