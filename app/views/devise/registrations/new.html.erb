<div class="login-user">
<p id="heading1"> Sign up</p>
<%= simple_form_for(resource,:html => { :multipart => true }, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= f.error_notification %>

  <div class="form-inputs">

  <span class="">
    <span class=""><%= f.input :username %></span>
    <span class=""><%= f.input :email, required: true, autofocus: true %></span>
  </span>

  <span class="">
    <span class=""><%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %></span>
    <span class=""><%= f.input :password_confirmation, required: true %></span>
  </span>
  
  <span class="">
    <%= f.input :phone_number %>
  </span>

  <span class="">
    <%= f.input :picture, as: :file %>
  </span>

  </div>

  <div class="form-actions">
   <center> <%= f.button :submit, "Sign up" ,:class=>" btn btn-blue btn-lg log-btn" %> </center>
  </div>
<% end %>


</div>